<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <item name="colorAccent">@color/nightColorPrimaryLight</item>
        <item name="android:windowBackground">@color/surfaceColorDark</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="appBarLayoutStyle">@style/appbarLayoutTheme</item>
    </style>
    <!--Splash Screen Theme-->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_image</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>



    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/nightColorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/surfaceColorDark</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ToolbarTextAppearance" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="materialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surfaceColorDark</item>
        <item name="elevation">1dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="bottomSheetTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/surfaceColorDark</item>
    </style>

    <style name="textCallToActionTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/nightColorPrimary</item>
    </style>


    <!--App Bar theme -->
    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Widget.App.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="appbarLayoutTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/black</item>
    </style>
    <style name="focusTextTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="toolbarNavigationIconTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>