<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        style="@style/bottomSheetTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".screens.AboutUsFragment"
        tools:ignore="UseCompoundDrawables">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/iste_manipal_logo_text"
            android:src="@drawable/iste_logo" />

        <TextView
            style="@style/focusTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:padding="10dp"
            android:text="@string/placeholder_text_long"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/website_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Visit Our Website"
            app:icon="@drawable/open_link_clipart" />
    </LinearLayout>
</layout>