<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/blogFragment">

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.lumos.screens.AccountFragment"
        android:label="AccountFragment" />
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.lumos.screens.QuestionFragment"
        android:label="QuestionFragment" />
    <fragment
        android:id="@+id/eventFragment"
        android:name="com.example.lumos.screens.EventFragment"
        android:label="EventFragment" >
        <action
            android:id="@+id/action_eventFragment_to_categoryEventFragment"
            app:destination="@id/categoryEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/blogFragment"
        android:name="com.example.lumos.screens.BlogFragment"
        android:label="BlogFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.lumos.screens.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragmentFirst"
            app:destination="@id/registrationFragmentFirst" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragmentFirst"
        android:name="com.example.lumos.screens.registration.RegistrationFragmentFirst"
        android:label="RegistrationFragmentFirst" >
        <action
            android:id="@+id/action_registrationFragmentFirst_to_registrationFragmentSecond"
            app:destination="@id/registrationFragmentSecond" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragmentSecond"
        android:name="com.example.lumos.screens.registration.RegistrationFragmentSecond"
        android:label="RegistrationFragmentSecond" >
        <action
            android:id="@+id/action_registrationFragmentSecond_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/categoryEventFragment"
        android:name="com.example.lumos.screens.CategoryEventFragment"
        android:label="CategoryEventFragment" />
</navigation>